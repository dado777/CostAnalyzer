<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CostAnalyzer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Syncfusion ASP.NET Core controls styles -->
    <link href="https://cdn.syncfusion.com/ej2/20.4.38/bootstrap5.css" rel="stylesheet"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <!-- <link rel="stylesheet" href="~/CostAnalyzer.styles.css" asp-append-version="true" />-->
    <!-- Syncfusion ASP.NET Core controls scripts -->
    <script src="https://cdn.syncfusion.com/ej2/20.4.38/dist/ej2.min.js"></script>
</head>
<body class="e-bigger">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        </nav>
    </header>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <main role="main" class="pb-3">
                    <div class="row">
                        <div class="col-md-7">
                            <div class="d-flex flex-column mb-5">
                                <div class="d-flex mb-1">
                                    <div class="flex-grow-1">
                                        <h3 class="fw-bold">@ViewData["PageTitle"]</h3>
                                    </div>
                                    <div>
                                        @if(ViewData["PageActionText"] != null)
                                        {
                                        <a class="btn btn-success" href="@ViewData["PageActionUrl"]">
                                            @ViewData["PageActionText"]
                                        </a>
                                        }
                                    </div>
                                </div>
                                <ejs-breadcrumb id="breadcrumb" beforeItemRender="beforeItemRender" separatorTemplate="@Html.Raw("<span class='fa-solid fa-angle-right'></span>")">
                                </ejs-breadcrumb>
                            </div>
                        </div>
                    </div>
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Breadcrumb localization for russian language -->
    <script>
    function beforeItemRender(args) {
        if (args.item.text === 'Category')
            args.item.text = 'Категория';
        else if(args.item.text === 'CreateOrEdit')
            args.item.text = 'Редактировать';
    }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
    <!-- Syncfusion Script Manager -->
    <ejs-scripts></ejs-scripts>
</body>
</html>
